<?xml version="1.0"?>
<ruleset name="Aivaras">
  <description>PHP PSR</description>

  <!-- Scan all files in directory -->
  <file>.</file>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>

  <!-- Use PSR-2 as a base -->
  <rule ref="PSR1"/>
  <rule ref="PSR12"/>

  <property name="eolChar" value="\r\n"/>
</ruleset>
